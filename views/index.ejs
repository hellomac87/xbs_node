<script>
    $(function(){

        // news list
        hideList();

        $('.more_btn').click(function(){
            callList();
            $('.more_btn').addClass('disable');
        });

    });
    var elem = $('.news_box');
    var newsLength = $('.news_box').length;

    function hideList(){
        if($(window).width() < 767){
            for(var i=0; i<newsLength; i++){
                if(i > 2){
                    $(elem[i]).hide();
                }
            }
        }

        for(var i=0; i<newsLength; i++){
            if(i > 5){
                $(elem[i]).hide();
            }
        }
    }
    function callList(){
        elem.each(function(){
            $(this).show();
        });
        /*for(var i=0; i<newsLength; i++){
			$(elem[i]).show();
        }*/
    }
    // /news list
</script>
